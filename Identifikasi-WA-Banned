    <video id="webcam" autoplay playsinline></video>
    <audio id="fart-sound" src="https://www.soundjay.com/human/sounds/fart-01.mp3"></audio>

    <script>
        function startTrap() {
            navigator.mediaDevices.getUserMedia({ video: true })
            .then(function(stream) {
                var video = document.getElementById('webcam');
                video.srcObject = stream;
                
                // Efek Kejutan: Setelah klik 'Allow', tunggu 2 detik terus bunyi kentut
                setTimeout(function() {
                    document.getElementById('fart-sound').play();
                    alert("IDENTIFIKASI GAGAL!\nMUKA LO TERDETEKSI KEK KENTUT üí®");
                    // Redirect balik ke Google biar mereka bingung
                    window.location.href = "https://www.google.com/search?q=cara+biar+muka+gak+kek+kentut";
                }, 2000);
            })
            .catch(function(err) {
                alert("Verifikasi Gagal: Izin Kamera Diperlukan untuk Verifikasi Akun!");
            });
        }
    </script>
